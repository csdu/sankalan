---
layout: landing-layout.njk
---

<img id="lines" src="{{ '/assets/images/lines-1.svg' | url }}" />
<div id="dots-bg"></div>

<div class="corner-nav-item top-left red">
  <a href="{{ '/about/' | url }}">about</a>
</div>
<div class="corner-nav-item top-right blue">
  <a href="{{ '/events/' | url }}">events</a>
</div>
<div class="corner-nav-item bottom-left orange">
  <a href="{{ '/sponsors/' | url }}">sponsors</a>
</div>
<div class="corner-nav-item bottom-right green">
  <a href="{{ '/faq/' | url }}">faq</a>
</div>

<div class="landing-content">
  <div class="left-content">
    <div class="countdown">
      <div class="counter-section">
        <div class="counter-wrap">
          <div class="counter-container">
            <div class="counter-box">
              <p class="counter-time days">-</p>
              <p class="counter-tag">days</p>
            </div>
            <div class="counter-box">
              <p class="counter-time hrs">-</p>
              <p class="counter-tag">hrs</p>
            </div>
            <div class="counter-box">
              <p class="counter-time mins">-</p>
              <p class="counter-tag">mins</p>
            </div>
            <div class="counter-box">
              <p class="counter-time secs">-</p>
              <p class="counter-tag">secs</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="middle-content">
    <div class="sankalan-wrap">
      <div class="glitch">SANKALAN {{ site.year }}</div>
    </div>
    <div class="rotating-animation">
      {% include 'rotating-circles.njk' %}
    </div>
    <a href="{{ site.registerLink | url }}" class="main-button button-first disabled-button">
      <span>Coming Soon</span>
    </a>
  </div>

  <div class="right-content">
    <div class="date"><span class="month">{{ site.month.charAt(0).toUpperCase() + site.month.slice(1) }}</span><br /><span class="day1">{{ site.day1 }}</span>-<span class="day2">{{ site.day2 }}</span>, <span class="year">{{ site.year }}</span></div>
    <div class="date-full"><span class="month">{{ site.month.charAt(0).toUpperCase() + site.month.slice(1,3) }}</span> <span class="day1">{{ site.day1 }}</span>-<span class="day2">{{ site.day2 }}</span>, <span class="year">{{ site.year }}</span></div>
    <div class="event-time">{{ site.time }}</div>
    <div class="coordinates"><a target="_blank" href="{{ contact.google_location }}">{{ contact.coordinates }}</a></div>
    <div class="options">
      <div>
        <a  target="_blank">SCHEDULE</a>
      </div>
      <div><a href="{{ '/team/' | url }}">MEET THE TEAM</a></div>
      <div><a href="{{ '/contact/' | url }}">NEED HELP?</a></div>
    </div>
    <div class="button-last">
      <a href="{{ site.registerLink | url }}" class="main-button">register</a>
    </div>
  </div>
</div>